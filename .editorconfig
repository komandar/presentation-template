root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 160
trim_trailing_whitespace = true

[{justfile,Makefile,makefile}]
indent_style = tab

[{*.go,go.mod}]
indent_style = tab

[*.json]
indent_size = 2

[*.{js,ts,vue}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.tf]
indent_size = 2

[{.github/**.{yml,yaml},.gitlab-ci*.{yml,yaml}}]
indent_size = 2
